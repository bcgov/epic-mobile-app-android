<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_inspection_layout"
    android:layout_marginTop="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_inspection_name_tv"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_inspection_id_tv"
            android:textSize="24sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/item_inspection_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/item_inspection_clock_iv"
            android:src="@drawable/clock"
            android:contentDescription="@null"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/item_inspection_id_tv"
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/item_inspection_time_tv"
            android:textColor="@color/medium_gray"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:layout_alignBottom="@+id/item_inspection_clock_iv"
            android:layout_toEndOf="@+id/item_inspection_clock_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/item_inspection_edit_iv"
            android:src="@drawable/edit"
            android:contentDescription="@null"
            android:clickable="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_width="64dp"
            android:layout_height="64dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>